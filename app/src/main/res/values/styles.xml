<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:statusBarColor">@color/overlayButton</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--<item name="colorPrimary">@android:color/white</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Overlay.Round" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/overlayButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Image" parent="@android:style/Widget.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Overlay" parent="AppTheme">
        <!--<item name="android:editTextStyle">@style/EditText.WhiteText</item>-->
        <item name="android:imageButtonStyle">@style/Button.Image</item>
    </style>

    <style name="EditText.WhiteText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
